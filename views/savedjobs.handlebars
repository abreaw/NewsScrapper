

<div class="container">
  <p  class="subtitle">Manage your saved jobs and add notes to them</p>
</div>

<!-- Pass in data from server -->
<section class="section">

 <div class="container">
   <div class="tile is-ancestor">
<ul>
  {{#each savedJobs}}
  <div class="tile">
      <div class="tile is-parent">
        <article class="tile is-child box">
  	<li>
  	  <p><span class="label">Title: <a class="job-title" target="_blank" href={{this.link}} alt={{this.title}}>{{this.title}}</a></span></p>
      <p><span class="job-location has-text-grey">{{this.location}}</span>
         <a class="job-company" target="_blank" href={{this.companyLink}} alt={{this.company}}> {{this.company}}</a>
         <span class="date">{{this.createDate}}</span>
      </p>
      {{!-- <p><a class="job-company" target="_blank" href={{this.companyLink}} alt={{this.company}}>{{this.company}}</a><span class="date">{{this.createDate}}</span></p> --}}
      {{!-- <p><span class="job-location has-text-grey">{{this.location}}</span></p> --}}
      <p class="job-summary"><span class="label">Details:</span> {{this.summary}}</p>

      <button id={{this._id}} class="delete-job button">Delete</button>
      <button id="{{this._id}}-add-btn" class="add-note button is-info">Add Note</button>

      {{#if this.notes}}

        <p><button data-show-id={{this._id}} class="show-comments button is-info is-inverted is-small">Show Comments<span class="carat-icon fas fa-angle-down"></span></button></p>
        <div id="{{this._id}}-comment-div" class="notes-listing is-invisible" data-tag="collapsed">

        {{#each this.notes}}

          <div class="level less-padding">
            <div class="level-left">
              <div class="level-item">
                <p>
                  {{this.body}}
                  <br>
                  <span class="note-name">{{this.name}}</span><span class="note-date has-text-grey-light is-size-7">{{this.createDate}}</span>
                </p>
              </div>
            </div>
            <div class="level-right">
              <button id={{this._id}} class="delete note-delete"></button>
            </div>
          </div>
        
        {{/each}}
        
        </div>

      {{/if}}


  	</li>
    <section id="{{this._id}}-section" class="section notes-view" data-tag="collapsed">
    <div id="{{this._id}}-div" class="is-invisible">
      <article class="media">
   <div class="media-content">
    <div class="content">
      <form data-id={{this.id}} action="/addnote/{{this.id}}">
      <div class="field">
        <div class="control">
            <input id="{{this.id}}-note" type="textarea" class="textarea" name="note" placeholder="Add your note here" autofocus>
        </div>
      </div>
      <div class="field is-grouped">
        <label class="label name-label">Name: </label>
        <div class="control">
          <input id="{{this.id}}-name" type="text" class="" name="name" placeholder="John Smith">
        </div>
      </div>
    <input type="button" class="button is-info add-job-note" data-id={{this._id}} value="Add Note">

</form>
    </div>
    
  </div>
  <div class="media-right">
    <button class="delete "></button>
  </div>
</article>

    </div>
    </section>
     </article>
      </div>
    </div>
  {{/each}}
</ul>
</div>
</div>

</section>